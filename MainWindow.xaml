<Window x:Class="Sample3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sample3"
        xmlns:vm="clr-namespace:Sample3.ViewModel"
        mc:Ignorable="d"
        Title="Commmand Bindings" Height="200" Width="300">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Datei">
                <MenuItem Command="{Binding CmdPrint}" Header="Drucken" InputGestureText="Ctrl+P" />
            </MenuItem>
        </Menu>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Command="{Binding CmdPrint}">
                    <Image Source="Print_11009.png" />
                </Button>
            </ToolBar>
        </ToolBarTray>
        <TextBox Name="txtContent" Margin="5" Background="AliceBlue" Text="{Binding ContentText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </DockPanel>
</Window>
